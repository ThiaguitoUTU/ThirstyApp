<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="top"
    android:background="@color/white"
    tools:context=".MainActivity2">

    <!-- Barra superior azul -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/light_blue" />

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_text2"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/light_blue"
        android:padding="0dp" />

    <!-- Imagen -->
    <ImageView
        android:id="@+id/characterImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Espacio flexible para empujar el EditText hacia abajo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <!-- Campo de texto de nombre -->
    <EditText
        android:id="@+id/name_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_edittext" />

    <!-- TextView debajo del EditText -->
    <TextView
        android:id="@+id/title_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text2"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Espacio flexible para empujar el botón hacia abajo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botón continuar -->
    <Button
        android:id="@+id/continue_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/continue_button_text"
        android:textAllCaps="false"
        android:backgroundTint="@color/light_blue"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />
</LinearLayout>
